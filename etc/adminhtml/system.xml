<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="kiwicommerce" translate="label" sortOrder="9999">
            <label><![CDATA[<span class="kiwiCommerce-logo">KiwiCommerce Extensions</span>]]></label>
        </tab>

        <section id="kiwicommerce" translate="label" type="text" sortOrder="100" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Login As Customer</label>
            <tab>kiwicommerce</tab>
            <resource>KiwiCommerce_LoginAsCustomer::config</resource>
            <group id="hint" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                <frontend_model>KiwiCommerce\LoginAsCustomer\Block\Adminhtml\System\Config\Fieldset\Hint</frontend_model>
            </group>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>General</label>

                <field id="login_as_customer_enabled" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

            </group>

            <group id="button_visibility" translate="label" type="text" sortOrder="10" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <label>Button visibility</label>

                <field id="customer_grid_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Customer Grid Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="customer_edit_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Customer Edit Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="order_view_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Order View Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="order_grid_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Order Grid Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="invoice_view_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Invoice View Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="invoice_grid_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Invoice Grid Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="shipment_view_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Shipment View Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="shipment_grid_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Shipment Grid Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="credit_memo_view_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Credit Memo View Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="credit_memo_grid_page" translate="label" type="select" showInDefault="1" canRestore="1"
                       showInWebsite="1" showInStore="1">
                    <label>Credit Memo Grid Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

            </group>
        </section>
    </system>
</config>